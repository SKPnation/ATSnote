<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaa"
    tools:context=".Help">

    <LinearLayout
        android:id="@+id/parent_care"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tvSlogan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Parent Care"
            android:textSize="30sp"
            android:textColor="#fff"/>

        <ImageView
            android:src="@drawable/customer_care"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/phone_help"
        android:layout_below="@id/parent_care"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#000"
        app:elevation="6dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_call_black_24dp"
        />

    <TextView
        android:layout_below="@id/phone_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="We are always happy to help"
        android:textSize="20sp"
        android:textColor="#fff"/>

</RelativeLayout>