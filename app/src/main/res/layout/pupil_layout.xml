<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pupil_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            android:src="@mipmap/ic_launcher"
            />

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pupil_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/pupil_image"
                    android:text="James Soyinka"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/pupil_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:layout_toRightOf="@id/pupil_image"
                    android:layout_below="@+id/pupil_name"
                    android:layout_marginLeft="30dp"
                    />

                <LinearLayout
                    android:id="@+id/reportlk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/pupil_age">

                    <TextView
                        android:id="@+id/report_tag"
                        android:layout_marginTop="4dp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/pupil_image"
                        android:text="Report:"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/report_file"
                        android:padding="4dp"
                        android:layout_below="@+id/pupil_age"
                        android:background="#aaa"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/pupil_image"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reportlk"
                    android:orientation="horizontal"
                    android:weightSum="9">

                    <TextView
                        android:id="@+id/bill_tag"
                        android:layout_marginTop="4dp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/pupil_image"
                        android:text="Bill:"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/bill_file"
                        android:layout_below="@+id/pupil_age"
                        android:padding="4dp"
                        android:background="#000"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/pupil_image"
                        android:text="                          "
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:singleLine="true"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_weight="1"
                android:text="EDIT"
                android:textSize="11sp"
                android:background="#ECF0F1"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnReport"
                android:background="#ECF0F1"
                android:layout_weight="1"
                android:text="REPORT"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnBill"
                android:background="#ECF0F1"
                android:layout_weight="1"
                android:text="FEES"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRemove"
                android:layout_weight="1"
                android:background="#ECF0F1"
                android:text="DELETE"
                android:textSize="11sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>