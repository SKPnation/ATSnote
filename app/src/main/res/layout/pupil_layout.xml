<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pupil_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            android:src="@mipmap/ic_launcher"
            />

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pupil_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/imageView"
                    android:text="James Soyinka"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/pupil_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:layout_toRightOf="@id/imageView"
                    android:layout_below="@+id/nameText"
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:id="@+id/report_file"
                    android:layout_below="@+id/pupil_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/imageView"
                    android:text="Report has not been uploaded"
                    android:textColor="@android:color/black"
                    android:textSize="9sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_notify"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Notify"
            android:textColor="#fff"
            android:textSize="17sp"
            android:background="@drawable/custom_notify_button"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_weight="1"
                android:text="EDIT"
                android:textSize="11sp"
                android:background="#fff"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnReport"
                android:background="#fff"
                android:layout_weight="1"
                android:text="REPORT"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRemove"
                android:layout_weight="1"
                android:background="#fff"
                android:text="DELETE"
                android:textSize="11sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>